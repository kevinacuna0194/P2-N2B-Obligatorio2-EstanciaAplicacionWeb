@using ClassLibrary;

@{
    ViewData["Title"] = "Login";
}

<section class="seccion">

    <h1 class="text-center heading mb-5">Login</h1>

    <div class="container-xl">

        <div class="row d-flex justify-content-center">

            <div class="col-md-6">

                @* Alertas *@
                @if (ViewBag.Error is not null)
                {
                    <p class="alert alert-danger text-center text-uppercase fw-bold mb-4">@ViewBag.Error</p>
                }
                else if (ViewBag.Exito is not null)
                {
                    <p class="alert alert-success text-center text-uppercase fw-bold mb-4">@ViewBag.Exito</p>
                }

                <form method="post" action="~/Usuarios/IniciarSesion">

                    <fieldset>

                        <legend class="mb-3"><i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión</legend>

                        <div class="mb-3">
                            <label class="form-label for="email">Email</label>
                            <input class="form-control" id="email" type="email" name="email" value="@ViewBag.Email">
                        </div>

                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" id="password" type="password" name="password">
                        </div>

                    </fieldset>

                    <div class="d-flex justify-content-between align-items-end py-3">

                        <input type="submit" class="btn btn-primary" value="Enviar">

                        <a class="text-primary text-decoration-none" href="~/Usuarios/Registrarse">¿Aun no tienes una cuenta? Regístrate.</a>

                    </div>

                </form>

            </div>

        </div>

    </div>

</section>

